{% extends 'menu-layout.html.twig' %}

{% block title %}Student index{% endblock %}

{% block contents %}

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">actions</th>
            </tr>
            </thead>
            <tbody>
            {% for student in students %}
                <tr>
                    <td>{{ student.id }}</td>
                    <td>{{ student.name }}</td>
                    <td>{{ student.surname }}</td>
                    <td>
                        <a class="me-2 link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
                                href="{{ path('app_student_show', {'id': student.id}) }}">show</a>
                        <a class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
                                href="{{ path('app_student_edit', {'id': student.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>




    <a href="{{ path('app_student_new') }}">Create new</a>
{% endblock %}
