{% extends 'menu-layout.html.twig' %}

{% block title %}Student Dashboard{% endblock %}

{% block contents %}

    <div class="container">
        <div>
            <div>Attendance Rate</div>
            <div class="progress-stacked">
                {% if presentPercent %}
                    <div class="progress" role="progressbar" aria-label="Present percentage"
                            aria-valuenow="{{ presentPercent }}" aria-valuemin="0" aria-valuemax="100"
                            style="width: {{ presentPercent }}%">
                        <div class="progress-bar bg-success"
                                data-bs-toggle="tooltip" data-bs-placement="top"
                                data-bs-custom-class="custom-tooltip"
                                data-bs-title="You have been present in {{ presentPercent }}% of classes."
                        ></div>
                    </div>
                {% endif %}
                {% if excusedPercent %}
                    <div class="progress" role="progressbar" aria-label="Excused percentage"
                            aria-valuenow="{{ excusedPercent }}" aria-valuemin="0" aria-valuemax="100"
                            style="width: {{ excusedPercent }}%">
                        <div class="progress-bar bg-secondary"
                                data-bs-toggle="tooltip" data-bs-placement="top"
                                data-bs-custom-class="custom-tooltip"
                                data-bs-title="Your absence have been excused in {{ excusedPercent }}% of classes."
                        ></div>
                    </div>
                {% endif %}
                {% if absentPercent %}
                    <div class="progress" role="progressbar" aria-label="Absent percentage"
                            aria-valuenow="{{ absentPercent }}" aria-valuemin="0" aria-valuemax="100"
                            style="width: {{ absentPercent }}%">
                        <div class="progress-bar bg-danger"
                                data-bs-toggle="tooltip" data-bs-placement="top"
                                data-bs-custom-class="custom-tooltip"
                                data-bs-title="You have been absent in {{ absentPercent }}% of classes."
                        ></div>
                    </div>
                {% endif %}

                {% if not excusedPercent and not absentPercent and not presentPercent %}
                    <div class="progress" role="progressbar" aria-label=" percentage"
                            aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"
                            style="width: 100%">
                        <div class="progress-bar bg-dark-subtle">Not enough data to display %</div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
