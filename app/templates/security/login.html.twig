{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="d-flex vh-100 justify-content-center bg-light">
        <div class="card shadow-sm d-flex align-self-center">
            <div class="card-header vstack gap-2 text-bg-dark p-3">
                <span class='h5 m-0 d-flex justify-content-center ps-4 pe-4'>ATTENDANCE MANAGEMENT SYSTEM</span>   
            </div>
            <div class="vstack gap-3 card-body p-3" >    
                <span class='h6'>Please sign into your account</span> 
                <div class="form-floating">
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    <label for="inputEmail" class="">Email</label>
                </div>
                <div class="form-floating">
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    <label for="inputPassword" class="">Password</label>
                </div>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
                <div class=" text-align: right">
                <button class="btn btn-md btn-primary w-100" type="submit">
                    Sign in
                </button>
                </div>
            </div>
        </div>
    </div>
</form>


{% endblock %}
