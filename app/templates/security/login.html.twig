{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="card position-absolute top-50 start-50 translate-middle" style="width: 35rem;">
        <h5 class="card-header" style="padding: 20px;">Sign into your account</h5>
        <div style="padding: 10px;">    
            <div class="card-body" style="padding: 5px;">
                <label for="inputEmail" class="h6">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="card-body" style="padding: 5px;">
                <label for="inputPassword" class="h6">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            <div class="card-body" style="padding: 10px 5px 5px 5px; text-align: right">
            <button class="btn btn-md btn-primary" style="width: 100%" type="submit">
                Sign in
            </button>
            </div>
        </div>
    </div>
</form>


{% endblock %}
