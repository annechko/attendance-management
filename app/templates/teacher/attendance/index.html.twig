{% extends 'menu-layout.html.twig' %}

{% block title %}Attendance index{% endblock %}

{% block contents %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Status</th>
                <th>Comment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for attendance in attendances %}
            <tr>
                <td>{{ attendance.id }}</td>
                <td>{{ attendance.date ? attendance.date|date('Y-m-d') : '' }}</td>
                <td>{{ attendance.status }}</td>
                <td>{{ attendance.comment }}</td>
                <td>
                    <a href="{{ path('teacher_attendance_show', {'id': attendance.id}) }}">show</a>
                    <a href="{{ path('teacher_attendance_edit', {'id': attendance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('teacher_attendance_new') }}">Create new</a>
{% endblock %}
