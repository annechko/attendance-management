{% extends 'base.html.twig' %}

{% block body %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script>

      document.addEventListener("DOMContentLoaded", () => {
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
      }); </script>

    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="#">Attendance Management System</a>
        <div class="dropdown">
            <button class="btn btn-dark" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                {{ app.user.userIdentifier }}
            </button>
            <ul class="dropdown-menu dropdown-menu-dark w-100">
                <li><a class="dropdown-item" href="{{ path('app_change_password') }}">Change password</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="{{ path('app_logout') }}">Sign out</a></li>
            </ul>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    {{ knp_menu_render('menu') }}
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="app-page-header d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h4">{% block title %}Welcome!{% endblock %}</h1>
                    <div class="app-actions d-flex justify-content-end mb-2 mb-md-0 w-50">
                        {% block search %}{% endblock %}
                        <div class="btn-group">
                            {% block actions %}{% endblock %}
                        </div>
                    </div>
                </div>

                {% block contents %}{% endblock %}

            </main>
        </div>
    </div>

    <script>
      if (feather) {
        feather.replace();
      }
    </script>
{% endblock %}
