<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
           <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
           <link href="https://getbootstrap.com/docs/5.0/examples/dashboard/dashboard.css" rel="stylesheet" crossorigin="anonymous">
        {% endblock %}
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/feather-icons@4.29.1/dist/feather.min.js"
                    integrity="sha384-En/3vVo7Wc+6Ogkkp7OUi5Oc7Zf4c+N/kRP3z7QVcJssy5Ud5MWcAvwWDAEFMga8"
                    crossorigin="anonymous"></script>
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
            <script>
        function showData(ID, Type) {
            // Construct the URL using the student ID
            var url;
            switch(Type){
                case "student" :
                    url = "{{ path('admin_student_show', {'id': 'ID'}) }}".replace('ID', ID);
                    break;
                case "teacher" :
                    url = "{{ path('admin_teacher_show', {'id': 'ID'}) }}".replace('ID', ID);
                    break;
                case "institution" :
                    url = "{{ path('admin_institution_show', {'id': 'ID'}) }}".replace('ID', ID);
                    break;
                case "course" :
                    url = "{{ path('admin_course_show', {'id': 'ID'}) }}".replace('ID', ID);
                    break;
                case "intake" :
                    url = "{{ path('admin_intake_show', {'id': 'ID'}) }}".replace('ID', ID);
                    break;
                case "period" :
                    url = "{{ path('admin_period_show', {'id': 'ID'}) }}".replace('ID', ID);
                    break;
                case "subject" :
                    url = "{{ path('admin_subject_show', {'id': 'ID'}) }}".replace('ID', ID);
                    break;
                case "period_to_subject" :
                    url = "{{ path('admin_period_to_subject_show', {'id': 'ID'}) }}".replace('ID', ID);
                    break;
                case "teachertosubject" :
                    url = "{{ path('admin_teacher_to_subject_to_intake_show', {'id': 'ID'}) }}".replace('ID', ID);
                    break;
                case "teacherattendancehistory" :
                    url = "{{ path('teacher_attendance_show', {'id': 'ID'}) }}".replace('ID',ID);
                    break;
            }
            // Redirect the user to the edit page
            window.location.href = url;
        }
    </script>
    </body>
</html>
