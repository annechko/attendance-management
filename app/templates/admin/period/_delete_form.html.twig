<form method="post" action="{{ path('admin_period_delete', {'id': period.id}) }}" 
    class="btn btn-sm btn-outline-danger custom-btn p-0"
    onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ period.id) }}">
    <button class="btn btn-sm btn-outline-danger w-100 h-100 border-0">Delete</button>
</form>
