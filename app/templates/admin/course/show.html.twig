{% extends 'menu-layout.html.twig' %}

{% block title %}Course{% endblock %}

{% block contents %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Institution</th>
                <td> <a href="{{ path('admin_institution_show', {id: course.institution.id}) }}"
                    >{{ course.institution.name }}</a></td>
            </tr>
            <tr>
                <th>Duration</th>
                <td> {{ course.duration ? course.duration.format('%y years %m months %d days') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_course_index') }}">back to list</a>

    <a href="{{ path('admin_course_edit', {'id': course.id}) }}">edit</a>

    {{ include('admin/course/_delete_form.html.twig') }}
{% endblock %}
