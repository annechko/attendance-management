{% extends 'menu-layout.html.twig' %}

{% block title %}Student Information{% endblock %}

{% block contents %}

    <table class="table">
        <tbody>
            <tr>
                <th scope="col" class='bg-light col-2'>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th scope="col" class='bg-light'>Email</th>
                <td>{{ student.email }}</td>
            </tr>
            <tr>
                <th scope="col" class='bg-light'>Name</th>
                <td>{{ student.name ~ ' ' ~ student.surname}}</td>
            </tr>
            <tr> 
                <th scope="col" class='bg-light'>Date of Birth</th>
                <td>{{ student.dateOfBirth ? student.dateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr> 
                <th scope="col" class='bg-light'>Gender</th>
                <td>{{ student.gender }}</td>
            </tr>
        </tbody>
    </table>



{% endblock %}

{% block actions %}
            <a class="btn custom-btn btn-sm btn-outline-dark"
                    href="{{ path('admin_student_index') }}">Back
            </a>
            <a class="btn custom-btn btn-sm btn-outline-dark"
                href="{{ path('admin_student_edit', {'id': student.id}) }}">Edit
            </a>
    {{ include('admin/student/_delete_form.html.twig') }}
{% endblock %}
