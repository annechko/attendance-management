{% extends 'menu-layout.html.twig' %}

{% block title %}Teacher Information{% endblock %}

{% block contents %}
    <div class="table-responsive w-50 p-3 card shadow">
        <table class="table table-sm">
            <tbody>
                <tr>
                    <th class="table-primary w-25" scope="col">Id</th>
                    <td>{{ teacher.id }}</td>
                </tr>
                <tr>
                    <th class="table-primary" >Email</th>
                    <td>{{ teacher.email }}</td>
                </tr>

                <tr>
                    <th class="table-primary" >Name</th>
                    <td>{{ teacher.name }}</td>
                </tr>
                <tr>
                    <th class="table-primary" >Surname</th>
                    <td>{{ teacher.surname }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn custom-btn btn-sm btn-outline-dark" href="{{ path('admin_teacher_index') }}">Back</a>
    </div>
{% endblock %}

{% block actions %}
    <a class="btn custom-btn btn-sm btn-outline-dark m-1"
        href="{{ path('admin_teacher_edit', {'id': teacher.id}) }}">Edit
    </a>
    {{ include('admin/teacher/_delete_form.html.twig') }}
{% endblock %}