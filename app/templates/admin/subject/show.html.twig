{% extends 'menu-layout.html.twig' %}

{% block title %}Subject{% endblock %}

{% block contents %}

    <table class="table">
        <tbody>
            <tr>
                <th class='bg-light col-2'>Id</th>
                <td>{{ subject.id }}</td>
            </tr>
            <tr>
                <th class='bg-light'>Name</th>
                <td>{{ subject.name }}</td>
            </tr>
            <tr>
                <th class='bg-light'>Code</th>
                <td>{{ subject.code }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}

{% block actions %}
            <a class="btn custom-btn btn-sm btn-outline-dark"
                    href="{{ path('admin_subject_index') }}">Back
            </a>
            <a class="btn custom-btn btn-sm btn-outline-dark"
                href="{{ path('admin_subject_edit', {'id': subject.id}) }}">Edit
            </a>
    {{ include('admin/subject/_delete_form.html.twig') }}
{% endblock %}