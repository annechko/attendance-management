{% extends 'menu-layout.html.twig' %}

{% block title %}Subject assigned to Teacher{% endblock %}

{% block contents %}

    <table class="table">
        <tbody>
        <tr>
            <th class='bg-light col-2'>Id</th>
            <td>{{ teacher_to_subject_to_intake.id }}</td>
        </tr>
        <tr>
        <th class='bg-light'>Code</th>
            <td>
                <a class='text-decoration-none' href="{{ path('admin_subject_show', {'id': teacher_to_subject_to_intake.subject.id}) }}"
                >{{ teacher_to_subject_to_intake.subject.code }}</a>
            </td>
        </tr>
        <th class='bg-light'>Subject</th>
            <td>
                <a class='text-decoration-none' href="{{ path('admin_subject_show', {'id': teacher_to_subject_to_intake.subject.id}) }}"
                >{{ teacher_to_subject_to_intake.subject.name }}</a>
            </td>
        </tr>
        <th class='bg-light'>Teacher</th>
            <td>
                <a class='text-decoration-none' href="{{ path('admin_teacher_show', {'id': teacher_to_subject_to_intake.teacher.id}) }}"
                >{{ teacher_to_subject_to_intake.teacher.name ~ ' ' ~ teacher_to_subject_to_intake.teacher.surname }}</a>
            </td>
        </tr>
        <tr>
        <th class='bg-light'>Intake</th>
            <td>
                <a class='text-decoration-none' href="{{ path('admin_intake_show', {'id': teacher_to_subject_to_intake.intake.id}) }}"
                >{{ teacher_to_subject_to_intake.intake.name }}</a>
            </td>
        </tr>
        <tr>
            <th class='bg-light'>Course</th>
            <td>
                <a class='text-decoration-none' href="{{ path('admin_course_show', {'id': teacher_to_subject_to_intake.subject.course.id}) }}"
                >{{ teacher_to_subject_to_intake.subject.course.name }}</a>
            </td>
        </tr>
        <tr>
        <tr>
            <th class='bg-light'>Start</th>
            <td>{{ teacher_to_subject_to_intake.start ? teacher_to_subject_to_intake.start|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th class='bg-light'>Finish</th>
            <td>{{ teacher_to_subject_to_intake.finish ? teacher_to_subject_to_intake.finish|date('Y-m-d') : '' }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}

{% block actions %}
    <a class="btn custom-btn btn-sm btn-outline-dark" 
        href="{{ path('admin_teacher_to_subject_to_intake_index') }}">Back</a>
    <a class="btn custom-btn btn-sm btn-outline-dark"
        href="{{ path('admin_teacher_to_subject_to_intake_edit', {'id': teacher_to_subject_to_intake.id}) }}">Edit</a>
    {{ include('admin/teacher_to_subject_to_intake/_delete_form.html.twig') }}
{% endblock %}