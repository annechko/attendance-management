{% extends 'menu-layout.html.twig' %}

{% block title %}Intake{% endblock %}

{% block contents %}

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ intake.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ intake.name }}</td>
        </tr>
        <tr>
            <th>Start</th>
            <td>{{ intake.start ? intake.start|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Finish</th>
            <td>{{ intake.finish ? intake.finish|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Course</th>
            <td>
                <a href="{{ path('admin_course_show', {id: intake.course.id}) }}"
                >{{ intake.course.name }}</a>
            </td>
        </tr>
        <tr>
            <th>Institution</th>
            <td>
                <a href="{{ path('admin_institution_show', {id: intake.course.institution.id}) }}"
                >{{ intake.course.institution.name }}</a>
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_intake_index') }}">back to list</a>

    <a href="{{ path('admin_intake_edit', {'id': intake.id}) }}">edit</a>

    {{ include('admin/intake/_delete_form.html.twig') }}
{% endblock %}
