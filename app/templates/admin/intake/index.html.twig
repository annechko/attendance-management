{% extends 'menu-layout.html.twig' %}

{% block title %}Intakes{% endblock %}

{% block actions %}
    <div class='hstack gap-2'>
        <input type='text' class='input-group-sm' placeholder='Search' />
        <a class="btn custom-btn btn-sm btn-outline-dark" href="{{ path('admin_intake_new') }}">Create New</a>
    </div>
{% endblock %}

{% block contents %}

    <table class="table table-sm table-hover">
        <thead>
            <tr class="table-primary">
                <th>Id</th>
                <th>Name</th>
                <th>Start</th>
                <th>Finish</th>
                <th>Course</th>
                <th>Institution</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for intake in intakes %}
            <tr onclick="showData({{ intake.id }}, 'intake')" >
                <td>{{ intake.id }}</td>
                <td>{{ intake.name }}</td>
                <td>{{ intake.start ? intake.start|date('Y-m-d') : '' }}</td>
                <td>{{ intake.finish ? intake.finish|date('Y-m-d') : '' }}</td>
                <td>{{ intake.course.name }}</td>
                <td>{{ intake.course.institution.name }}</td>
                <td>
                    <a href="{{ path('admin_intake_edit', {'id': intake.id}) }}">
                        <i data-feather="edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
