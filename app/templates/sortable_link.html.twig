<a{% for attr, value  in options %} {{ attr }}="{{ value }}"{% endfor %}
style="color: #000;text-decoration: none;">
    {{ title }}

    {% if sorted %}
        {% if direction == 'desc' %}
            <i data-feather="arrow-down"></i>
        {% else %}
            <i data-feather="arrow-up"></i>
        {% endif %}
    {% else %}
        <span style="color: #090a0b30;">
            <i data-feather="arrow-down"></i>
        </span>
    {% endif %}
</a>
